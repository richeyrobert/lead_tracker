<h1>Login</h1>

<% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
<% end %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>

<%= form_tag session_path do %>
	<div class="field">
		<%= label_tag :email %><br />
		<%= text_field_tag :email %>
	</div>

	<div class="field">
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</div>

	<div class="actions">
		<%= submit_tag "Login" %>
	</div>

<% end %>
